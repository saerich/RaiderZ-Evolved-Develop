  <Target Name="BuildForCI">
    <Message Text="$(BuildConditionForCI) 조건에서 빌드를 시도합니다. " Importance="high"/>
    <MSBuild Projects="MasterServer.sln" Targets="$(BuildConditionForCI)" Properties="Configuration=Release" StopOnFirstFailure="true" ContinueOnError="false"> </MSBuild>
  </Target>
  <Target Name="ReleaseBuild">
    <MSBuild Projects="MasterServer.sln" Targets="Build" Properties="Configuration=Release" StopOnFirstFailure="true" ContinueOnError="false"> </MSBuild>
  </Target>
  <Target Name="ReleaseRebuild">
    <MSBuild Projects="MasterServer.sln" Targets="Rebuild" Properties="Configuration=Release" StopOnFirstFailure="true" ContinueOnError="false"> </MSBuild>
  </Target>

</Project>